<form method = 'post' action='/new_neghostiation'>
  <label for="investigator-name">Select your name</label>

  <select id="investigator-name" name="investigator_id">
    <option value="" disabled selected hidden>Please Choose...</option>
    <% @investigators.each do |investigator| %>
      <option value = "<%= investigator.id %>">
        <%= investigator.name %>
      </option>
    <% end %>
  </select>

  <br><br>
  <label for="haunting-id">Haunting being investigated</label>

  <select id="haunting-id" name="haunting_id">
  <option value="" disabled selected hidden>Please Choose...</option>
  <% @hauntings.each do |haunting| %>
  <option value="<%=haunting.id%>" >
    <%=haunting.haunting_name %>
    <% end %>
  </select>

  <br><br>
  <label for ="neghostation-date">On what date did the investigation take place?</label>
  <input id="neghostation-date" type="date" name="neghostiation_date" max="04-05-2017">

  <br><br>
  <label for ="services">Which services were carried out?</label>
  <br>

  <% @services.each do |service| %>
  <input id ="services" type = "checkbox" name="services_id" value="<%= service.id %>"/>
  <%= service.name  %> <br>
  <% end %>
  <br>

  <label for="report">Please write a report of what took place when you carried out the investigation</label>
  <br>
  <textarea name="report" rows="5" cols="30" placeholder="Your investigation report...">

</textarea>
<br>

  <label for="successful">Would you consider this a successful visit (i.e. was the ghost calmed?)</label>
  <br>
  <input id="successful" type="radio" name="successful" value = "true" />Yes</br>
  <input id="successful" type="radio" name="successful" value = "false" />No <br>
  <input type="submit" value = "file report" />
  <br>

</form>
