
<a href="/hauntings/new">Report a new haunting</a>

<table>

  <tr class="table_header">
    <td>Haunting</td>
    <td>Date</td>
    <td>Location</td>
    <td>Location Type</td>
    <td>Ghost Name</td>
    <td>Ghost Type</td>
    <td>Description</td>
    <td>More Details</td>
    <td>Link to Investigation</td>
  </tr >
    <% for haunting in @customer.hauntings %>
  <tr>
    <td><%=haunting.haunting_name %></td>
    <td><%=haunting.haunting_date %></td>
    <td><%=haunting.location_name %></td>
    <td><%=haunting.location_type %></td>
    <td><%=haunting.ghost_name %></td>
    <td><%=haunting.ghost_type %></td>
    <td><%=haunting.haunting_description %></td>
    <td><a href="/hauntings/<%=haunting.id %>">Show</a></td>
    <td><a href="/neghostiations/<%=haunting.neghostiation.first.id %>">Investigation Report</a></td>

  </tr>
  <% end %>
</table>
